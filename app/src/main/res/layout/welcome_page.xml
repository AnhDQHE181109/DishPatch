<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:background="@color/yellow"
        android:contentDescription="back to welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="Hello!"
        android:textColor="@color/background_white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/welcome_fragment"
        android:layout_width="match_parent"
        android:layout_height="546dp"
        android:translationZ="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="589dp"
        android:layout_marginTop="30dp"
        app:layout_constraintCircleRadius="40dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        app:srcCompat="@drawable/rectangle_container"
        tools:layout_editor_absoluteX="-4dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/lower_bar" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="100dp"
        app:constraint_referenced_ids="homebutton,dishbutton,favouritebutton,orderbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/favouritebutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/orange"
        android:scaleType="fitCenter"
        android:translationZ="100dp"
        app:srcCompat="@drawable/favourite_icon"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="661dp" />

    <ImageButton
        android:id="@+id/homebutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/orange"
        android:scaleType="fitCenter"
        android:tint="@color/background_white"
        android:translationZ="100dp"
        app:srcCompat="@drawable/home_icon"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="661dp" />

    <ImageButton
        android:id="@+id/dishbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/orange"
        android:scaleType="fitCenter"
        android:translationZ="100dp"
        app:srcCompat="@drawable/dish_icon"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="661dp" />

    <ImageButton
        android:id="@+id/orderbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/orange"
        android:scaleType="fitCenter"
        android:translationZ="100dp"
        app:srcCompat="@drawable/order_icon"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="446dp" />

</androidx.constraintlayout.widget.ConstraintLayout>